<div class="index">
<div class="container">
<%= form_tag(lessons_path, method: :get, class:"row col-8 bg-white p-3 my-3 align-items-center  rounded-pill shadow-sm d-flex justify-content-between") do %>
    <div>
    <%= text_field_tag :city, "city", class:"" %>

    <%= select_tag(:category, options_for_select(Category::CATEGORIES)) %>
    <%= submit_tag("Search") %>
    </div>
  <% end %>
<h3>Our courses:</h3>
<div class="row">
<div class="container">
  <div class="row col-8">
    <% @lessons.each do |lesson| %>
      <div class="col-6">
        <div>
          <%= link_to lesson_path(lesson), class: "card-links" do %>
            <%= render "shared/card_index", lesson: lesson %>
          <% end %>
        </div>
      </div>
     <% end %>
  </div>
  <div class="row col-6">
   <div  style="width: 100%; height: 400px; margin-bottom: 200px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>
</div>
</div>
<%= render "shared/footer" %>
</div>
